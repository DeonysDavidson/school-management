<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Second Name</th>
        <th scope="col">Class</th>
        <th scope="col">Subject</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each teachers}}
      <tr>
        <th scope="row">{{formatIndex @index}}</th>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.class}}</td>
        <td>{{this.subject}}</td>
        <td>{{this.email}}</td>
        <td><a href="/edit-teacher/{{this.id}}">Edit</a>&nbsp;
          <a href="/delete-teacher/{{this.id}}">Delete</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>